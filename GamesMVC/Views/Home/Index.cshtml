    <table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                <h2 class="heading_text_style_all font-weight-bold">Rank<h2>
            </th>
            <th>
                <h2 class="heading_text_style_all font-weight-bold"> Game Name</h2>
            </th>
            <th>
               <h2 class="heading_text_style_all font-weight-bold"> Sales</h2>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in @Model.Games) {
        <tr class="googlefont font-weight-bold">
            <td>
                @item.GameID
            </td>
            <td>
                @item.GameName
            </td>
            <td>
                @item.Sales.ToString("#,###,###")
            </td>
            <td>
                
                <a class="pt-1 pb-1 px-1 bg-dark text-light" asp-action="GamesDetail" asp-route-id="@item.GameID">Details</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
<div class="row justify-content-center">
    <div class="col-md-12 mb-1 ">
        <div class="pb-1 gradient_all rounded">
        <h1 class=" text-light text-center heading_text_style_all font-weight-bold">Game Search</h1>
        <p class="text-light text-center googlefont font-weight-bold">For more information about a game, please enter the rank of the game below</p>
        <form class="text-center googlefont" asp-action="GamesDetail" asp-route-id="" method="get">
            <p class="lead"><input type="int" name="id" placeholder="Enter a game number" />
                <input class="bg-dark text-light"type="submit" />
            </p>
        </form>
        </div>
